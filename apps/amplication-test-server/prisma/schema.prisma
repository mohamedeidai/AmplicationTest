datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Customer {
  address   String?
  createdAt DateTime @default(now())
  email     String?
  id        String   @id @default(cuid())
  name      String?
  note      String?
  sales     Sale[]
  updatedAt DateTime @updatedAt
}

model Sale {
  createdAt   DateTime     @default(now())
  customer    Customer?    @relation(fields: [customerId], references: [id])
  customerId  String?
  id          String       @id @default(cuid())
  note        String?
  saleDate    DateTime?
  saleDetails SaleDetail[]
  totalAmount Decimal?
  updatedAt   DateTime     @updatedAt
}

model SaleDetail {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  item      Item     @relation(fields: [itemId], references: [id])
  itemId    String
  quantity  Int
  sale      Sale     @relation(fields: [saleId], references: [id])
  saleId    String
  unitPrice Float?
  updatedAt DateTime @updatedAt
}

model Item {
  createdAt   DateTime     @default(now())
  id          String       @id @default(cuid())
  name        String?
  note        String?
  price       Float?
  saleDetails SaleDetail[]
  updatedAt   DateTime     @updatedAt
}
